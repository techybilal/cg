#include<graphics.h>
#include<stdlib.h>
#include<stdio.h>
#include<conio.h>
int main(void)
{
int gd = DETECT,gm;
int xmax, ymax;
initgraph(&gd,&gm,"C:\\TC\\BGI");
setcolor(getmaxcolor());
xmax =getmaxx();
ymax =getmaxy();
line(xmax/2,0,xmax/2,ymax);
line(0,ymax/2,xmax,ymax/2);
outtextxy(10,20,"co-ordinate axis");
getch();
closegraph();
return 0;
}
